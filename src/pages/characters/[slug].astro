---
import BaseLayout from '../../layouts/BaseLayout.astro';
import EquipmentPanel from '../../components/EquipmentPanel.astro';
import CurrencyDisplay from '../../components/CurrencyDisplay.astro';
import LevelUpTracker from '../../components/LevelUpTracker.astro';
import LevelUpWizard from '../../components/LevelUpWizard.astro';
import SpellManager from '../../components/SpellManager.astro';
import XPTracker from '../../components/XPTracker.astro';
import SkillsPanel from '../../components/SkillsPanel.astro';
import FeatManager from '../../components/FeatManager.astro';
import { getCollection } from 'astro:content';
import { getNextLevelPreview, getClassData } from '../../data/leveling';

export async function getStaticPaths() {
  const characters = await getCollection('characters');
  return characters.map(char => ({
    params: { slug: char.slug },
    props: { char },
  }));
}

const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const { char } = Astro.props;
const { Content } = await char.render();

const hpPct = char.data.hp && char.data.maxHp
  ? Math.round((char.data.hp / char.data.maxHp) * 100)
  : 100;
const hpClass = hpPct > 60 ? 'healthy' : hpPct > 30 ? 'wounded' : '';

function mod(score) {
  if (!score) return 0;
  return Math.floor((score - 10) / 2);
}
function modStr(score) {
  const m = mod(score);
  return m >= 0 ? `+${m}` : `${m}`;
}

// Pre-compute level-up preview data for wizard
const charClass = char.data.class ?? 'Fighter';
const charLevel = char.data.level ?? 1;
const allPreviews: Record<number, any> = {};
for (let lvl = 1; lvl < 20; lvl++) {
  const preview = getNextLevelPreview(charClass, lvl);
  if (preview) allPreviews[lvl] = preview;
}
const classData = getClassData(charClass);
const classDataForWizard = classData ? {
  hitDie: classData.hitDie,
  subclassName: classData.subclassName,
  subclassLevel: classData.subclassLevel,
  casterType: classData.casterType,
} : { hitDie: 8, subclassName: 'Subclass', subclassLevel: 3, casterType: 'none' };
---

<BaseLayout title={char.data.name}>
  <div class="page-container">
    <div class="back-link"><a href={`${base}/characters`}>‚Üê The Party</a></div>

    <!-- Hero Header -->
    <div class="char-hero">
      {char.data.portrait && (
        <div class="char-portrait">
          <img src={`${base}${char.data.portrait}`} alt={char.data.name} />
        </div>
      )}
      <div class="char-hero-left">
        <h1>{char.data.name}</h1>
        <div class="char-meta">
          {char.data.player && <span class="meta-item player">üé≤ {char.data.player}</span>}
          {char.data.race && <span class="meta-item">{char.data.race}</span>}
          {char.data.class && <span class="meta-item">{char.data.class}</span>}
          {char.data.level && <span class="meta-item" id="charLevelMeta">Level {char.data.level}</span>}
        </div>
      </div>

      <div class="char-vitals">
        {char.data.hp !== undefined && char.data.maxHp !== undefined && (
          <div class="vitals-hp">
            <div class="vital-label">Hit Points</div>
            <div class="vital-value">
              {char.data.hp} <span class="vital-max">/ {char.data.maxHp}</span>
            </div>
            <div class="hp-bar">
              <div class={`hp-bar-fill ${hpClass}`} style={`width: ${hpPct}%`}></div>
            </div>
          </div>
        )}
        {char.data.ac !== undefined && (
          <div class="stat-badge"><span class="value">{char.data.ac}</span><span class="label">AC</span></div>
        )}
        {char.data.speed !== undefined && (
          <div class="stat-badge"><span class="value">{char.data.speed}</span><span class="label">Speed</span></div>
        )}
        {char.data.profBonus !== undefined && (
          <div class="stat-badge"><span class="value">+{char.data.profBonus}</span><span class="label">Prof</span></div>
        )}
      </div>
    </div>

    <hr />

    <!-- Ability Scores row -->
    {char.data.str !== undefined && (
      <div class="ability-scores-bar">
        {[
          { key: 'STR', val: char.data.str },
          { key: 'DEX', val: char.data.dex },
          { key: 'CON', val: char.data.con },
          { key: 'INT', val: char.data.int },
          { key: 'WIS', val: char.data.wis },
          { key: 'CHA', val: char.data.cha },
        ].map(({ key, val }) => (
          <div class="ability-block">
            <span class="ability-label">{key}</span>
            <span class="ability-score">{val}</span>
            <span class="ability-mod">{modStr(val)}</span>
          </div>
        ))}
      </div>
    )}

    <!-- XP Tracker -->
    <XPTracker
      characterName={char.data.name}
      characterSlug={char.slug}
      currentXP={char.data.xp ?? 0}
      currentLevel={char.data.level ?? 1}
      baseUrl={base}
    />

    <!-- Level-Up Wizard -->
    <div id="level-up">
      <LevelUpWizard
        characterName={char.data.name}
        characterSlug={char.slug}
        characterClass={charClass}
        currentLevel={charLevel}
        baseXP={char.data.xp ?? 0}
        con={char.data.con ?? 10}
        maxHp={char.data.maxHp ?? 10}
        baseUrl={base}
        allPreviews={JSON.stringify(allPreviews)}
        classDataJson={JSON.stringify(classDataForWizard)}
      />
    </div>

    <!-- Skills & Saves -->
    {char.data.str !== undefined && (
      <SkillsPanel
        characterName={char.data.name}
        characterSlug={char.slug}
        profBonus={char.data.profBonus ?? 2}
        str={char.data.str ?? 10}
        dex={char.data.dex ?? 10}
        con={char.data.con ?? 10}
        int={char.data.int ?? 10}
        wis={char.data.wis ?? 10}
        cha={char.data.cha ?? 10}
        skillProficiencies={char.data.skillProficiencies}
        skillExpertise={char.data.skillExpertise}
        savingThrowProficiencies={char.data.savingThrowProficiencies}
        baseUrl={base}
      />
    )}

    <!-- Feats -->
    <FeatManager
      characterName={char.data.name}
      characterSlug={char.slug}
      characterLevel={char.data.level ?? 1}
      feats={char.data.feats}
      baseUrl={base}
    />

    <!-- Currency -->
    <CurrencyDisplay characterSlug={char.slug} currency={char.data.currency} />

    <!-- Equipment Panel -->
    <EquipmentPanel characterSlug={char.slug} character={char.data} />

    <!-- Active Conditions -->
    {char.data.conditions && char.data.conditions.length > 0 && (
      <div class="conditions-bar">
        <span class="conditions-label">Conditions</span>
        {char.data.conditions.map(c => (
          <span class="condition-tag">{c}</span>
        ))}
      </div>
    )}

    <!-- Spells (interactive SpellManager component) -->
    {char.data.spells && char.data.spells.length > 0 && (
      <SpellManager
        characterName={char.data.name}
        characterSlug={char.slug}
        characterClass={char.data.class ?? 'Adventurer'}
        characterLevel={char.data.level ?? 1}
        str={char.data.str}
        dex={char.data.dex}
        con={char.data.con}
        int={char.data.int}
        wis={char.data.wis}
        cha={char.data.cha}
        spells={char.data.spells}
        spellSlots={char.data.spellSlots}
        spellcastingAbility={char.data.spellcastingAbility}
        casterType={char.data.casterType}
        baseUrl={base}
      />
    )}

    <!-- Level-up Tracker -->
    <LevelUpTracker
      characterClass={char.data.class ?? 'Adventurer'}
      characterSlug={char.slug}
      currentLevel={char.data.level ?? 1}
      levelHistory={char.data.levelHistory}
    />

    <hr />

    <!-- Markdown content (personality, session highlights, class features, etc.) -->
    <div class="prose">
      <Content />
    </div>
  </div>
</BaseLayout>

<style>
.back-link { margin-bottom: 1.5rem; }
.back-link a { color: var(--text-muted); font-size: 0.85rem; }
.back-link a:hover { color: var(--accent-primary); }

.char-hero {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 2rem;
  flex-wrap: wrap;
}
.char-hero-left h1 { margin-bottom: 0.5rem; }
.char-meta { display: flex; flex-wrap: wrap; gap: 0.5rem; align-items: center; }
.meta-item {
  font-size: 0.82rem;
  color: var(--text-muted);
  background: rgba(0,201,167,0.08);
  border: 1px solid rgba(0,201,167,0.25);
  padding: 0.2rem 0.6rem;
  border-radius: 3px;
}
.meta-item.player {
  color: var(--accent-primary);
  background: rgba(0,201,167,0.12);
  border-color: rgba(0,201,167,0.4);
}

.char-vitals {
  display: flex;
  align-items: center;
  gap: 1rem;
  flex-shrink: 0;
}
.vitals-hp { min-width: 140px; }
.vital-label { font-size: 0.7rem; text-transform: uppercase; letter-spacing: 0.1em; color: var(--text-muted); margin-bottom: 0.2rem; }
.vital-value { font-size: 1.8rem; font-weight: bold; color: var(--accent-primary); line-height: 1; }
.vital-max { font-size: 1rem; color: var(--text-muted); }

/* Ability score bar */
.ability-scores-bar {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
  margin: 1.25rem 0;
}
.ability-block {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: var(--bg-elevated);
  border: 1px solid var(--border-accent);
  border-radius: 8px;
  padding: 0.5rem 0.85rem;
  min-width: 65px;
  flex: 1;
  max-width: 90px;
}
.ability-label {
  font-size: 0.62rem;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  color: var(--text-muted);
}
.ability-score {
  font-size: 1.5rem;
  font-weight: bold;
  color: var(--text-parchment);
  line-height: 1.1;
}
.ability-mod {
  font-size: 0.9rem;
  color: var(--accent-primary);
  font-weight: bold;
  background: rgba(0,201,167,0.12);
  border-radius: 4px;
  padding: 0 0.4rem;
  margin-top: 0.15rem;
}

/* Portrait */
.char-portrait { flex-shrink: 0; }
.char-portrait img {
  width: 180px; height: 180px; border-radius: 50%;
  border: 4px solid var(--border-accent);
  object-fit: cover;
  box-shadow: 0 0 24px rgba(0,201,167,0.2), 0 0 48px rgba(0,201,167,0.08);
}

/* Conditions */
.conditions-bar {
  display: flex; align-items: center; gap: 0.5rem; flex-wrap: wrap;
  margin: 1rem 0; padding: 0.6rem 1rem;
  background: rgba(139,32,32,0.08);
  border: 1px solid rgba(139,32,32,0.3);
  border-radius: 6px;
}
.conditions-label {
  font-size: 0.65rem; text-transform: uppercase; letter-spacing: 0.1em;
  color: var(--text-muted); margin-right: 0.25rem;
}
.condition-tag {
  font-size: 0.78rem; font-weight: bold;
  color: #e88; background: rgba(139,32,32,0.2);
  border: 1px solid rgba(139,32,32,0.4);
  padding: 0.15rem 0.55rem; border-radius: 4px;
}

@media (max-width: 640px) {
  .char-hero { flex-direction: column; }
  .char-vitals { width: 100%; }
  .char-portrait img { width: 120px; height: 120px; }
  .ability-block { min-width: 50px; padding: 0.4rem 0.5rem; }
  .ability-score { font-size: 1.2rem; }
}
</style>

<script define:vars={{ charSlugForClient: char.slug }}>
  document.addEventListener('DOMContentLoaded', function() {
    function updateHeaderLevel() {
      try {
        var saved = localStorage.getItem('sbtf-level-' + charSlugForClient);
        if (!saved) return;
        var data = JSON.parse(saved);
        if (!data.effectiveLevel) return;
        var meta = document.getElementById('charLevelMeta');
        if (meta) meta.textContent = 'Level ' + data.effectiveLevel;
      } catch(e) {}
    }
    updateHeaderLevel();
    document.addEventListener('sbtf-level-changed', updateHeaderLevel);
  });
</script>
