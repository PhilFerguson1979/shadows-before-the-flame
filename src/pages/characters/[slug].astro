---
import BaseLayout from '../../layouts/BaseLayout.astro';
import EquipmentPanel from '../../components/EquipmentPanel.astro';
import CurrencyDisplay from '../../components/CurrencyDisplay.astro';
import LevelUpTracker from '../../components/LevelUpTracker.astro';
import { getCollection } from 'astro:content';
import { getSpellByName, spellNameToSlug } from '../../data/spells';

export async function getStaticPaths() {
  const characters = await getCollection('characters');
  return characters.map(char => ({
    params: { slug: char.slug },
    props: { char },
  }));
}

const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const { char } = Astro.props;
const { Content } = await char.render();

const hpPct = char.data.hp && char.data.maxHp
  ? Math.round((char.data.hp / char.data.maxHp) * 100)
  : 100;
const hpClass = hpPct > 60 ? 'healthy' : hpPct > 30 ? 'wounded' : '';

function mod(score) {
  if (!score) return 0;
  return Math.floor((score - 10) / 2);
}
function modStr(score) {
  const m = mod(score);
  return m >= 0 ? `+${m}` : `${m}`;
}
---

<BaseLayout title={char.data.name}>
  <div class="page-container">
    <div class="back-link"><a href={`${base}/characters`}>‚Üê The Party</a></div>

    <!-- Hero Header -->
    <div class="char-hero">
      {char.data.portrait && (
        <div class="char-portrait">
          <img src={`${base}${char.data.portrait}`} alt={char.data.name} />
        </div>
      )}
      <div class="char-hero-left">
        <h1>{char.data.name}</h1>
        <div class="char-meta">
          {char.data.player && <span class="meta-item player">üé≤ {char.data.player}</span>}
          {char.data.race && <span class="meta-item">{char.data.race}</span>}
          {char.data.class && <span class="meta-item">{char.data.class}</span>}
          {char.data.level && <span class="meta-item">Level {char.data.level}</span>}
        </div>
      </div>

      <div class="char-vitals">
        {char.data.hp !== undefined && char.data.maxHp !== undefined && (
          <div class="vitals-hp">
            <div class="vital-label">Hit Points</div>
            <div class="vital-value">
              {char.data.hp} <span class="vital-max">/ {char.data.maxHp}</span>
            </div>
            <div class="hp-bar">
              <div class={`hp-bar-fill ${hpClass}`} style={`width: ${hpPct}%`}></div>
            </div>
          </div>
        )}
        {char.data.ac !== undefined && (
          <div class="stat-badge"><span class="value">{char.data.ac}</span><span class="label">AC</span></div>
        )}
        {char.data.speed !== undefined && (
          <div class="stat-badge"><span class="value">{char.data.speed}</span><span class="label">Speed</span></div>
        )}
        {char.data.profBonus !== undefined && (
          <div class="stat-badge"><span class="value">+{char.data.profBonus}</span><span class="label">Prof</span></div>
        )}
      </div>
    </div>

    <hr />

    <!-- Ability Scores row -->
    {char.data.str !== undefined && (
      <div class="ability-scores-bar">
        {[
          { key: 'STR', val: char.data.str },
          { key: 'DEX', val: char.data.dex },
          { key: 'CON', val: char.data.con },
          { key: 'INT', val: char.data.int },
          { key: 'WIS', val: char.data.wis },
          { key: 'CHA', val: char.data.cha },
        ].map(({ key, val }) => (
          <div class="ability-block">
            <span class="ability-label">{key}</span>
            <span class="ability-score">{val}</span>
            <span class="ability-mod">{modStr(val)}</span>
          </div>
        ))}
      </div>
    )}

    <!-- Currency -->
    {char.data.currency && <CurrencyDisplay currency={char.data.currency} />}

    <!-- Equipment Panel -->
    {char.data.inventory && char.data.inventory.length > 0 && (
      <EquipmentPanel character={char.data} />
    )}

    <!-- Active Conditions -->
    {char.data.conditions && char.data.conditions.length > 0 && (
      <div class="conditions-bar">
        <span class="conditions-label">Conditions</span>
        {char.data.conditions.map(c => (
          <span class="condition-tag">{c}</span>
        ))}
      </div>
    )}

    <!-- Spells -->
    {char.data.spells && char.data.spells.length > 0 && (
      <div class="spells-section">
        <h2 class="section-title">Spells</h2>
        {char.data.spellSlots && char.data.spellSlots.length > 0 && (
          <div class="spell-slots-bar">
            {char.data.spellSlots.map(slot => (
              <div class="spell-slot-group">
                <span class="slot-label">{slot.level === 1 ? '1st' : slot.level === 2 ? '2nd' : slot.level === 3 ? '3rd' : `${slot.level}th`}</span>
                <div class="slot-pips">
                  {Array.from({ length: slot.total }).map((_, i) => (
                    <span class={`slot-pip ${i < (slot.used ?? 0) ? 'used' : ''}`}></span>
                  ))}
                </div>
              </div>
            ))}
          </div>
        )}
        {(() => {
          const cantrips = char.data.spells.filter(s => s.level === 0);
          const leveled = char.data.spells.filter(s => s.level > 0);
          const grouped = new Map();
          leveled.forEach(s => {
            const key = s.level;
            if (!grouped.has(key)) grouped.set(key, []);
            grouped.get(key).push(s);
          });
          return (
            <>
              {cantrips.length > 0 && (
                <div class="spell-group">
                  <div class="spell-group-label">Cantrips</div>
                  <div class="spell-list">
                    {cantrips.map(s => {
                      const dbSpell = getSpellByName(s.name);
                      const inner = (
                        <>
                          <span class="spell-name">{s.name}</span>
                          {s.concentration && <span class="spell-tag conc">C</span>}
                          {s.ritual && <span class="spell-tag ritual">R</span>}
                          {s.school && <span class="spell-school">{s.school}</span>}
                          {s.notes && <span class="spell-notes">{s.notes}</span>}
                        </>
                      );
                      return dbSpell
                        ? <a href={`${base}/spells/${dbSpell.slug}`} class="spell-card spell-card-link">{inner}</a>
                        : <div class="spell-card">{inner}</div>;
                    })}
                  </div>
                </div>
              )}
              {[...grouped.entries()].sort((a, b) => a[0] - b[0]).map(([lvl, spells]) => (
                <div class="spell-group">
                  <div class="spell-group-label">{lvl === 1 ? '1st' : lvl === 2 ? '2nd' : lvl === 3 ? '3rd' : `${lvl}th`} Level</div>
                  <div class="spell-list">
                    {spells.map(s => {
                      const dbSpell = getSpellByName(s.name);
                      const cls = `spell-card ${!s.prepared ? 'not-prepared' : ''}`;
                      const inner = (
                        <>
                          <span class="spell-name">{s.name}</span>
                          {s.concentration && <span class="spell-tag conc">C</span>}
                          {s.ritual && <span class="spell-tag ritual">R</span>}
                          {!s.prepared && <span class="spell-tag unprepared">Not Prepared</span>}
                          {s.school && <span class="spell-school">{s.school}</span>}
                          {s.notes && <span class="spell-notes">{s.notes}</span>}
                        </>
                      );
                      return dbSpell
                        ? <a href={`${base}/spells/${dbSpell.slug}`} class={`${cls} spell-card-link`}>{inner}</a>
                        : <div class={cls}>{inner}</div>;
                    })}
                  </div>
                </div>
              ))}
            </>
          );
        })()}
      </div>
    )}

    <!-- Level-up Tracker -->
    <LevelUpTracker
      characterClass={char.data.class ?? 'Adventurer'}
      currentLevel={char.data.level ?? 1}
      levelHistory={char.data.levelHistory}
    />

    <hr />

    <!-- Markdown content (personality, session highlights, class features, etc.) -->
    <div class="prose">
      <Content />
    </div>
  </div>
</BaseLayout>

<style>
.back-link { margin-bottom: 1.5rem; }
.back-link a { color: var(--text-muted); font-size: 0.85rem; }
.back-link a:hover { color: var(--text-gold); }

.char-hero {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 2rem;
  flex-wrap: wrap;
}
.char-hero-left h1 { margin-bottom: 0.5rem; }
.char-meta { display: flex; flex-wrap: wrap; gap: 0.5rem; align-items: center; }
.meta-item {
  font-size: 0.82rem;
  color: var(--text-muted);
  background: rgba(139,105,20,0.1);
  border: 1px solid rgba(139,105,20,0.3);
  padding: 0.2rem 0.6rem;
  border-radius: 3px;
}
.meta-item.player {
  color: var(--text-gold);
  background: rgba(139,105,20,0.18);
  border-color: rgba(139,105,20,0.5);
}

.char-vitals {
  display: flex;
  align-items: center;
  gap: 1rem;
  flex-shrink: 0;
}
.vitals-hp { min-width: 140px; }
.vital-label { font-size: 0.7rem; text-transform: uppercase; letter-spacing: 0.1em; color: var(--text-muted); margin-bottom: 0.2rem; }
.vital-value { font-size: 1.8rem; font-weight: bold; color: var(--text-gold-bright); line-height: 1; }
.vital-max { font-size: 1rem; color: var(--text-muted); }

/* Ability score bar */
.ability-scores-bar {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
  margin: 1.25rem 0;
}
.ability-block {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(139,105,20,0.08);
  border: 1px solid rgba(139,105,20,0.25);
  border-radius: 8px;
  padding: 0.5rem 0.85rem;
  min-width: 65px;
  flex: 1;
  max-width: 90px;
}
.ability-label {
  font-size: 0.62rem;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  color: var(--text-muted);
}
.ability-score {
  font-size: 1.5rem;
  font-weight: bold;
  color: var(--text-parchment);
  line-height: 1.1;
}
.ability-mod {
  font-size: 0.9rem;
  color: var(--text-gold-bright);
  font-weight: bold;
  background: rgba(139,105,20,0.2);
  border-radius: 4px;
  padding: 0 0.4rem;
  margin-top: 0.15rem;
}

/* Portrait */
.char-portrait { flex-shrink: 0; }
.char-portrait img {
  width: 100px; height: 100px; border-radius: 50%;
  border: 3px solid rgba(139,105,20,0.5);
  object-fit: cover;
  box-shadow: 0 0 20px rgba(139,105,20,0.15);
}

/* Conditions */
.conditions-bar {
  display: flex; align-items: center; gap: 0.5rem; flex-wrap: wrap;
  margin: 1rem 0; padding: 0.6rem 1rem;
  background: rgba(139,32,32,0.08);
  border: 1px solid rgba(139,32,32,0.3);
  border-radius: 6px;
}
.conditions-label {
  font-size: 0.65rem; text-transform: uppercase; letter-spacing: 0.1em;
  color: var(--text-muted); margin-right: 0.25rem;
}
.condition-tag {
  font-size: 0.78rem; font-weight: bold;
  color: #e88; background: rgba(139,32,32,0.2);
  border: 1px solid rgba(139,32,32,0.4);
  padding: 0.15rem 0.55rem; border-radius: 4px;
}

/* Spells */
.spells-section { margin: 1.5rem 0; }
.section-title {
  font-size: 1rem; text-transform: uppercase; letter-spacing: 0.08em;
  color: var(--text-muted); margin-bottom: 1rem; padding-bottom: 0.4rem;
  border-bottom: 1px solid rgba(139,105,20,0.3);
}
.spell-slots-bar {
  display: flex; gap: 1rem; flex-wrap: wrap; margin-bottom: 1rem;
}
.spell-slot-group { display: flex; align-items: center; gap: 0.4rem; }
.slot-label {
  font-size: 0.7rem; color: var(--text-muted); min-width: 24px;
}
.slot-pips { display: flex; gap: 0.25rem; }
.slot-pip {
  width: 14px; height: 14px; border-radius: 50%;
  border: 2px solid rgba(100,80,200,0.5);
  background: rgba(100,80,200,0.15);
}
.slot-pip.used {
  background: rgba(100,80,200,0.08);
  border-color: rgba(100,80,200,0.2);
  opacity: 0.4;
}
.spell-group { margin-bottom: 1rem; }
.spell-group-label {
  font-size: 0.72rem; text-transform: uppercase; letter-spacing: 0.08em;
  color: var(--text-gold); margin-bottom: 0.4rem; font-weight: bold;
}
.spell-list { display: flex; flex-direction: column; gap: 0.3rem; }
.spell-card {
  display: flex; align-items: center; gap: 0.5rem; flex-wrap: wrap;
  padding: 0.4rem 0.75rem; border-radius: 5px;
  background: rgba(100,80,200,0.06);
  border: 1px solid rgba(100,80,200,0.15);
}
.spell-card.not-prepared { opacity: 0.45; }
.spell-card-link {
  text-decoration: none;
  cursor: pointer;
  transition: all 0.15s ease;
}
.spell-card-link:hover {
  background: rgba(100,80,200,0.14);
  border-color: rgba(100,80,200,0.3);
  transform: translateX(3px);
}
.spell-name { font-size: 0.85rem; color: var(--text-parchment); font-weight: 600; }
.spell-tag {
  font-size: 0.6rem; text-transform: uppercase; letter-spacing: 0.05em;
  padding: 0.1rem 0.35rem; border-radius: 3px; font-weight: bold;
}
.spell-tag.conc { background: rgba(200,150,20,0.2); color: #d4a83a; border: 1px solid rgba(200,150,20,0.3); }
.spell-tag.ritual { background: rgba(20,120,200,0.15); color: #6ab0e8; border: 1px solid rgba(20,120,200,0.25); }
.spell-tag.unprepared { background: rgba(100,100,100,0.15); color: var(--text-dim); border: 1px solid rgba(100,100,100,0.25); }
.spell-school { font-size: 0.68rem; color: var(--text-dim); margin-left: auto; }
.spell-notes { font-size: 0.72rem; color: var(--text-muted); font-style: italic; width: 100%; }

@media (max-width: 640px) {
  .char-hero { flex-direction: column; }
  .char-vitals { width: 100%; }
  .char-portrait img { width: 80px; height: 80px; }
  .ability-block { min-width: 50px; padding: 0.4rem 0.5rem; }
  .ability-score { font-size: 1.2rem; }
}
</style>
