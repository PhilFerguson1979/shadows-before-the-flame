---
interface LevelEntry {
  level: number;
  sessionNumber?: number;
  date?: string;
  hpGained?: number;
  features?: string[];
  notes?: string;
}

interface Props {
  characterClass: string;
  currentLevel: number;
  levelHistory?: LevelEntry[];
}

const { characterClass, currentLevel, levelHistory } = Astro.props;

// Color theme by class
const classColors: Record<string, string> = {
  barbarian:  '#c0392b',
  bard:       '#9b59b6',
  cleric:     '#f0c040',
  druid:      '#27ae60',
  fighter:    '#7f8c8d',
  monk:       '#e67e22',
  paladin:    '#f39c12',
  ranger:     '#2ecc71',
  rogue:      '#1abc9c',
  sorcerer:   '#8e44ad',
  warlock:    '#6c3483',
  wizard:     '#2980b9',
  artificer:  '#16a085',
};
const cls = characterClass?.toLowerCase() ?? '';
const accentColor = Object.keys(classColors).find(k => cls.includes(k))
  ? classColors[Object.keys(classColors).find(k => cls.includes(k))!]
  : '#8b6914';
---

<section class="level-tracker">
  <div class="lt-header">
    <h3 class="lt-title">Level Progress</h3>
    <div class="lt-current">
      <span class="lt-level-num">{currentLevel}</span>
      <span class="lt-level-lbl">{characterClass}</span>
    </div>
  </div>

  <!-- Level pip bar -->
  <div class="lt-pip-row">
    {Array.from({ length: 20 }, (_, i) => i + 1).map(lvl => (
      <div
        class={`lt-pip ${lvl <= currentLevel ? 'pip-filled' : 'pip-empty'} ${lvl === currentLevel ? 'pip-current' : ''}`}
        title={`Level ${lvl}`}
        style={lvl <= currentLevel ? `background: ${accentColor}; border-color: ${accentColor};` : ''}
      >
        {lvl === currentLevel ? lvl : ''}
      </div>
    ))}
  </div>

  <!-- Level history -->
  {levelHistory && levelHistory.length > 0 && (
    <div class="lt-history">
      {[...levelHistory].sort((a, b) => b.level - a.level).map(entry => (
        <div class="lt-entry">
          <div class="lt-entry-badge" style={`background: ${accentColor}22; border-color: ${accentColor}66; color: ${accentColor};`}>
            Lvl {entry.level}
          </div>
          <div class="lt-entry-body">
            <div class="lt-entry-meta">
              {entry.sessionNumber && <span class="lt-meta-pill">Session {entry.sessionNumber}</span>}
              {entry.date && <span class="lt-meta-pill">{entry.date}</span>}
              {entry.hpGained && <span class="lt-meta-pill lt-hp-pill">+{entry.hpGained} HP</span>}
            </div>
            {entry.features && entry.features.length > 0 && (
              <ul class="lt-features">
                {entry.features.map(f => <li class="lt-feature">{f}</li>)}
              </ul>
            )}
            {entry.notes && <p class="lt-notes">{entry.notes}</p>}
          </div>
        </div>
      ))}
    </div>
  )}

  {(!levelHistory || levelHistory.length === 0) && currentLevel === 1 && (
    <p class="lt-empty">Level 1 — campaign just getting started.</p>
  )}
</section>

<style define:vars={{ accentColor }}>
.level-tracker {
  background: var(--card-bg);
  border: 1px solid var(--border-card);
  border-radius: 8px;
  padding: 1.25rem;
  margin-bottom: 1.5rem;
}

.lt-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 1rem;
}

.lt-title {
  font-size: 0.72rem;
  text-transform: uppercase;
  letter-spacing: 0.12em;
  color: var(--text-muted);
  margin: 0;
}

.lt-current {
  display: flex;
  align-items: baseline;
  gap: 0.4rem;
}

.lt-level-num {
  font-size: 1.5rem;
  font-weight: bold;
  color: var(--accentColor);
  line-height: 1;
}

.lt-level-lbl {
  font-size: 0.78rem;
  color: var(--text-muted);
}

/* Pip bar */
.lt-pip-row {
  display: flex;
  gap: 3px;
  flex-wrap: wrap;
  margin-bottom: 1rem;
}

.lt-pip {
  width: 20px;
  height: 20px;
  border-radius: 3px;
  border: 1px solid rgba(139,105,20,0.25);
  background: rgba(0,0,0,0.2);
  font-size: 0.55rem;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-weight: bold;
  transition: all 0.2s;
}

.pip-current {
  transform: scale(1.15);
  box-shadow: 0 0 6px var(--accentColor);
}

.pip-empty {
  opacity: 0.3;
}

/* History entries */
.lt-history {
  display: flex;
  flex-direction: column;
  gap: 0.6rem;
  border-top: 1px solid rgba(139,105,20,0.15);
  padding-top: 0.75rem;
}

.lt-entry {
  display: flex;
  gap: 0.75rem;
  align-items: flex-start;
}

.lt-entry-badge {
  font-size: 0.72rem;
  font-weight: bold;
  padding: 0.2rem 0.5rem;
  border-radius: 4px;
  border: 1px solid;
  white-space: nowrap;
  flex-shrink: 0;
  margin-top: 2px;
}

.lt-entry-body { flex: 1; }

.lt-entry-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 0.3rem;
  margin-bottom: 0.4rem;
}

.lt-meta-pill {
  font-size: 0.68rem;
  color: var(--text-muted);
  background: rgba(139,105,20,0.08);
  border: 1px solid rgba(139,105,20,0.2);
  border-radius: 3px;
  padding: 0.1rem 0.4rem;
}

.lt-hp-pill {
  color: #7dc87a;
  border-color: rgba(80,180,80,0.3);
  background: rgba(80,180,80,0.08);
}

.lt-features {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: 0.2rem;
}

.lt-feature {
  font-size: 0.82rem;
  color: var(--text-parchment);
  padding-left: 1rem;
  position: relative;
}

.lt-feature::before {
  content: '→';
  position: absolute;
  left: 0;
  color: var(--accentColor);
  font-size: 0.7rem;
}

.lt-notes {
  font-size: 0.78rem;
  color: var(--text-muted);
  font-style: italic;
  margin: 0.3rem 0 0 0;
}

.lt-empty {
  font-size: 0.8rem;
  color: var(--text-muted);
  font-style: italic;
  margin: 0;
}
</style>
